<h1>{{i18n "contact.title"}}</h1>

<Hello />

<form {{action "createContact" name email phone message on="submit"}}>
  <label>
    {{i18n "contact.create_contact.text_name_label"}}:

  </label>
  {{input type="text" value=name name="name" required=true}}

  <label>
    {{i18n "contact.create_contact.text_email_label"}}
  </label>
  {{input type="text" value=email name="email" required=true}}

  <label>
    {{i18n "contact.create_contact.text_phone_label"}}
  </label>
  {{input type="text" value=phone}}

  <label>
    {{i18n "contact.create_contact.text_message_label"}}
  </label>
  {{textarea value=message required=true}}

  <button type="submit" class="btn btn-primary">
    {{i18n "contact.create_contact.submit_label"}}
  </button>
</form>

{{#if contacts}}
  <ul>
    {{#each contacts as |contact|}}
      <li>{{contact.id}}
        |
        {{contact.name}}
        |
        {{contact.email}}
        |
        {{contact.phone}}
        |
        {{contact.message}}

        <button
          type="button"
          class="btn btn-danger"
          {{action "deleteContact" contact}}
        >
          {{i18n "contact.delete_contact_label"}}
        </button>
      </li>
    {{/each}}
  </ul>
{{/if}}